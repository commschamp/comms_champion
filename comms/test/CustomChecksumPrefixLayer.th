{
    static const char Buf[] = {
        static_cast<char>(0xab), static_cast<char>(0xcd), // sync
        0x0, 0x9, // size
        MessageType9, // id
        0x61, static_cast<char>(0xd2), // checksum
        0x05, 'h', 'e', 'l', 'l', 'o' // payload
