    TS_ASSERT_EQUALS(msgPtr->transportField_version().value(), 8U);

    auto& msg1 = dynamic_cast<Message1<MsgBase>&>(*msgPtr);
    TS_ASSERT_EQUALS(std::get<0>(msg1.fields()).value(), 0x0102);
}
